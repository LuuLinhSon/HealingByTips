<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fruitstudio.healingbytips.View.Main.ChiTietBenh.ChiTietBenhActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/imBackChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_white_24dp"
            android:layout_gravity="left"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayoutchitiet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabGravity="fill"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="#FFD600"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="@style/capsfalse"

        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerchitiet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
