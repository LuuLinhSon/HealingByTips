<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autumbackground"
    tools:context="com.fruitstudio.healingbytips.View.LogIn.LogInActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/tranColorDack"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:layout_margin="20dp"
            >
            <!--<ImageView-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:src="@drawable/logoapp"-->
                <!--android:layout_gravity="center"-->
                <!--/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào!"
                android:textColor="#FFF"
                android:textSize="40sp"
                android:textAllCaps="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thật tuyệt khi được thấy bạn ở đây.Hãy điền đầy đủ thông tin email và mật khẩu để trải nghiệm ứng dụng.Nếu chưa có tài khoản vui lòng chọn Đăng ký mới"
                android:textColor="#CCC"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/edEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:textColorHint="#CCC"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColor="#FFF"
                android:background="@drawable/custom_edittext_login"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                />

            <EditText
                android:id="@+id/edMatKhauLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:hint="Mật khẩu"
                android:textColorHint="#CCC"
                android:drawablePadding="10dp"
                android:textColor="#FFF"
                android:background="@drawable/custom_edittext_login"
                android:maxLines="1"
                android:lines="1"
                />

            <Button
                android:id="@+id/btnDangNhap"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Đăng nhập"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_exit_to_app_white_24dp"
                android:background="@drawable/custom_button_login"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#FFF"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoặc"
                    android:textColor="#FFF"
                    android:layout_weight="7"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone"

                >
                <Button
                    android:id="@+id/btnSignInGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Google"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:drawableLeft="@drawable/icon_google_2"
                    android:background="@drawable/custom_button_google"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    />
                <Button
                    android:id="@+id/btnSignInFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Facebook"
                    android:textColor="#FFF"
                    android:drawableLeft="@drawable/icon_facebook"
                    android:background="@drawable/custom_button_facebook"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:id="@+id/tvQuenMatKhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quenmatkhau"
                    android:textColor="#FFF"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tvDangKyMoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dangkymoi"
                    android:textColor="#FFF"
                    android:gravity="right"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
