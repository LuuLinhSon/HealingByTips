<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC"
    android:orientation="vertical"
    tools:context="com.fruitstudio.healingbytips.View.BinhLuan.ThemBinhLuanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/imBackBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_white_24dp"
            android:layout_gravity="left"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#CCC"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiều đề"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/edTieuDeBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext_binhluan"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:lines="1"
                android:textColor="#000"
                android:inputType="text"
                android:gravity="left"
                android:textCursorDrawable="@null"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung bình luận"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edNoiDungBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/custom_edittext_binhluan"
                android:layout_marginTop="3dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:gravity="left"
                android:textColor="#000"
                android:padding="5dp"
                android:textCursorDrawable="@null"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn thích hay không thích phương pháp này:"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:id="@+id/framelike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/imLikeThemBinhLuan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_like"
                        android:tint="#616161"
                        />
                    <ImageView
                        android:id="@+id/imLikeThemBinhLuan2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_like"
                        android:visibility="gone"
                        />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameunlike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/imUnLikeThemBinhLuan"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_unlike"
                        android:tint="#616161"
                        />
                    <ImageView
                        android:id="@+id/imUnLikeThemBinhLuan2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_unlike"
                        android:visibility="gone"
                        />
                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnDangBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_button_login"
                android:text="Đăng bình luận"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
